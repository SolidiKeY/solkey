\include "./commonFields.key";

/*
    alice = new Person();
    bob = new Person();
    alice.age = 20;
    bob.age = 20;
    return (alice.age, bob.age);
*/

\rules {
    aliceDef {
        \find(alice)
        \replacewith(idC(ca, mt))
        \heuristics(concrete)
    };

    bobDef {
        \find(bob)
        \replacewith(idC(cb, mt))
        \heuristics(concrete)
    };
}

\problem {
    { mem := addM(mem, ca) }
    { mem := addM(mem, cb) }
        { mem := write(mem, alice, age, 20) }
        { mem := write(mem,   bob, age, 30) }
            { v := int::read(mem, alice, age) }
            { u := int::read(mem, bob  , age) }
                (v = 20 & u = 30)
}
